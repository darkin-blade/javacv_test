<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 上面的东西不管 -->
    <!-- 顶栏 -->
    <style name="bar_1">
        <item name="android:textSize">@dimen/bar_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/color_1</item>

        <item name="android:layout_height">@dimen/bar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="bar_2" parent="bar_1">
        <item name="android:background">@color/color_2</item>
    </style>

    <!-- 标题 -->
    <style name="title_1">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/color_1</item>

        <item name="android:layout_height">@dimen/tab_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="title_2" parent="title_1">
        <item name="android:background">@color/color_2</item>
    </style>

    <style name="title_white" parent="title_1">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/grey</item>
    </style>

    <!-- 栏 -->
    <style name="tab_white" parent="title_white">
        <item name="android:textSize">@dimen/tab_size</item>
    </style>

    <!-- 横线 -->
    <style name="line">
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!-- 输入框 -->
    <style name="dialog_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/dialog_input</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">text</item>
    </style>

    <!-- 图片显示 -->
    <style name="img_show">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- 高宽参数 -->
    <!-- 顶栏 -->
    <dimen name="bar_height">55dp</dimen>
    <dimen name="bar_size">23dp</dimen>

    <!-- 标题栏高度 -->
    <dimen name="title_height">55dp</dimen>
    <dimen name="title_size">20dp</dimen>

    <!-- 窗口tab高度/宽度 -->
    <dimen name="tab_height">35dp</dimen>
    <dimen name="tab_width">125dp</dimen>
    <dimen name="tab_between">10dp</dimen>
    <dimen name="tab_size">16dp</dimen>

    <!-- 底栏 -->
    <dimen name="bottom_1">60dp</dimen>
    <dimen name="bottom_2">120dp</dimen>
    <dimen name="bottom_3">180dp</dimen>
    <dimen name="bottom_4">95dp</dimen>

</resources>
